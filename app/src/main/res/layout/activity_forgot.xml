<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sangamsagar.signingin.ForgotActivity">

    <TextView
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:paddingLeft="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="100sp"
        android:text="Reset password"
        android:id="@+id/reset_textview"
        android:textColor="#EC407A"
        android:textSize="28sp"/>
    <TextView
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:id="@+id/reset_textview2"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:text="Please enter your email to reset\n your password"
        android:textColor="#EC407A"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:paddingLeft="20sp"
        android:id="@+id/email_enter"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:hint="Email"
        android:textColor="#EC407A"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="50sp"
        android:layout_marginLeft="100sp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/reset"
        android:layout_width="100sp"
        android:textSize="18sp"
        android:paddingLeft="25sp"
        android:paddingTop="15sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_height="50sp"
        android:background="@drawable/rectangle_pink"
        android:text="Reset" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="100sp"
            android:textSize="18sp"
            android:paddingLeft="25sp"
            android:layout_marginLeft="10sp"
            android:paddingTop="15sp"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:layout_height="50sp"
            android:background="@drawable/rectangle"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>
