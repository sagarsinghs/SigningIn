<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sangamsagar.signingin.Recordings.CommentsActivity">



    <ListView
        android:id="@+id/alert_listview_inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/play"
        android:layout_weight="1"
        android:layout_marginBottom="20sp"
        tools:listitem="@layout/activity_comments_layout"
        android:divider="#FFFFFF"
        android:dividerHeight="1sp"
        android:transcriptMode="alwaysScroll">

    </ListView>
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"

    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/comment_section"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:hint="write the comments"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/main_comment"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/comments"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/comments"
        android:text="Comment" />
</LinearLayout>

</LinearLayout>