<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="sangamsagar.signingin.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="10sp"
        android:background="@mipmap/download"
        android:scaleType="centerInside" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_marginLeft="40sp">

        </Spinner>

    </LinearLayout>
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_height="40sp"
        android:paddingLeft="20sp"
        android:layout_marginRight="20sp"
        android:id="@+id/username"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:hint="Username"
        android:textColor="#EC407A"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="170sp"
            android:background="@drawable/rectangle"
            android:layout_height="40sp"
            android:textColor="#EC407A"
            android:layout_marginTop="10sp"
            android:paddingLeft="20sp"
            android:id="@+id/full_name"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:hint="Full Name"
            android:textSize="18sp"/>




            <EditText
                android:id="@+id/date"
                android:layout_width="140sp"
                android:layout_weight="1"
                android:textColor="#EC407A"
                android:layout_height="40sp"
                android:paddingLeft="20sp"
                android:background="@drawable/rectangle"
               android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:hint="DD/MM/YY"
                android:textSize="15sp" />
          <!--  <Button
                android:id="@+id/click"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:textStyle="bold"
                android:layout_marginLeft="1sp"
                android:text="DOB"
                android:visibility="invisible"
                android:textSize="14sp" />-->



    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_height="40sp"
        android:textColor="#EC407A"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="20sp"
        android:hint="Password"
        android:layout_marginTop="10sp"
        android:id="@+id/paassword"
        android:textStyle="bold"
        android:inputType="textPassword"

        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_height="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textColor="#EC407A"
        android:textStyle="bold"
        android:paddingLeft="20sp"
        android:hint="Reenter password"
        android:id="@+id/paassword_verify"
        android:inputType="textPassword"

        android:textSize="18sp"/>

   <EditText
       android:layout_width="match_parent"
       android:layout_height="40sp"
       android:background="@drawable/rectangle"
       android:layout_marginLeft="20sp"
       android:textStyle="bold"
       android:layout_marginRight="20sp"
       android:layout_marginTop="10sp"
       android:paddingLeft="20sp"
       android:hint="Email"
       android:textColor="#EC407A"
       android:id="@+id/email"
       android:inputType="textEmailAddress"

       android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="20sp"
        android:id="@+id/phone"
        android:layout_marginRight="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:textColor="#EC407A"
        android:hint="Mobile Number"
        android:paddingLeft="20sp"
        android:inputType="phone"

        android:textSize="18sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginRight="20sp"
        android:text="Sign up"
        android:background="#EC407A"
        android:layout_marginTop="10sp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_marginLeft="20sp"
        android:id="@+id/done"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EC407A"
        android:textSize="14sp"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="By signing up,you agree to our\n\t\t  Terms and Conditions.
     "/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:background="#EC407A"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EC407A"
            android:textSize="15sp"
            android:text="\t\tHave an account ? "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:textColor="#EC407A"
        android:textSize="18sp"
        android:layout_marginLeft="5sp"
        android:text="Log In"/>
    </LinearLayout>

</LinearLayout>
