<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sangamsagar.signingin.Recordings.AllRecording">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ed_sherren_bck" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ed_sherren"
        app:civ_border_color="#fff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        app:civ_border_width="5dp"
        android:id="@+id/circleImageView" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:layout_below="@+id/circleImageView"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/next"
        android:layout_toStartOf="@+id/next"
        android:text="00:00:00"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"

        app:srcCompat="@drawable/login_ic_next" />

    <ImageView
        android:id="@+id/previous"
        android:layout_width="50sp"
        android:layout_height="50sp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/next"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:srcCompat="@drawable/login_ic_previous" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignTop="@+id/next"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_action_play" />
</RelativeLayout>
